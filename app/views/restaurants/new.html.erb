      <h1>Add a restaurant</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name, placeholder: "Choose a restaurant" %>
        <%= f.input :address, placeholder: "Guldbergsgade 11, 2200 KÃ¸benhavn N"  %>
        <%= f.input :phone_number, placeholder: "+61401011461"  %>
